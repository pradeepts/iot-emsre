{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "streamAnalyticsSettings": {
            "type": "object"
        },
        "iotHubSettings": {
            "type": "object"
        },
        "apiVersions":{
            "type": "object"
        },
        "azureSQL": {
            "type": "object"
        },
        "omsSettings": {
            "type": "object"
        }
    },
    "resources": [
        {
            "apiVersion": "[parameters('apiVersions').saApiVersion]",
            "name": "[parameters('streamAnalyticsSettings').streamAnalyticsJobName]",
            "location": "[parameters('streamAnalyticsSettings').location]",
            "type": "Microsoft.StreamAnalytics/StreamingJobs",
            "properties": {
                "sku": {
                    "name": "[parameters('streamAnalyticsSettings').sku]"
                },
                "outputErrorPolicy": "stop",
                "eventsOutOfOrderPolicy": "adjust",
                "eventsOutOfOrderMaxDelayInSeconds": 0,
                "eventsLateArrivalMaxDelayInSeconds": 5,
                "dataLocale": "en-US",
                "inputs": [
                    {
                        "Name": "IoTHubIn",
                        "Properties": {
                          "DataSource": {
                            "Properties": {
                              "iotHubNamespace": "[parameters('iotHubSettings').iotHubName]",
                              "sharedAccessPolicyKey": "[listkeys(resourceId('Microsoft.Devices/IotHubs/IotHubKeys',parameters('iotHubSettings').iotHubName, 'iothubowner'),parameters('apiVersions').iotHubApiversion).primaryKey]",
                              "sharedAccessPolicyName": "iothubowner",
                              "endpoint": "messages/events"
                            },
                            "Type": "Microsoft.Devices/IotHubs"
                          },
                          "Serialization": {
                            "Properties": {
                              "Encoding": "UTF8"
                            },
                            "Type": "Json"
                          },
                          "Type": "Stream"
                        }
                      }
                ],
                "transformation": {
                    "name": "Transformation",
                    "properties": {
                        "streamingUnits":"[parameters('streamAnalyticsSettings').numberOfStreamingUnits]",
                        "query": "WITH DeviceDataCollection AS\r\n  (\r\n   SELECT GetArrayElement(DeviceData,0)as DeviceData,\r\n    IoTHub.EnqueuedTime as time FROM IoTHubIn\r\n   )\r\n   SELECT\r\n  DeviceData.Device_Id AS PowerScout,\r\n    time AS [TimeStamp],\r\n   DeviceData.AMPSL1 AS [Amps L1],\r\n   DeviceData.AMPSL2 AS [Amps L2],\r\n   DeviceData.AMPSL3 AS [Amps L3],\r\n   DeviceData.AMPSAvg AS [Amps System Avg],\r\n   DeviceData.VoltsL1toNeutral AS [Volts L1 to Neutral],\r\n   DeviceData.VoltsL2toNeutral AS [Volts L2 to Neutral],\r\n   DeviceData.VoltsL3toNeutral AS [Volts L3 to Neutral],\r\n    DeviceData.kWL1 AS [kW L1],\r\n    DeviceData.kWL2 AS [kW L2],\r\n  DeviceData.kWL3 AS [kW L3],\r\n  DeviceData.kWSystem AS [kW System]\r\nINTO\r\n    [DataBase]\r\nFROM\r\n    [DeviceDataCollection]"
                    }
                },
                "outputs": [
                    {
                      "name": "DataBase",
                      "properties": {
                        "dataSource": {
                          "type": "Microsoft.Sql/Server/Database",
                          "properties": {
                            "server": "[concat(parameters('azureSQL').serverName,'.database.windows.net')]",
                            "database": "[parameters('azureSQL').databaseName1]",
                            "user": "[parameters('azureSQL').sqlAuthenticationLogin]",
                            "password": "[parameters('azureSQL').sqlAuthenticationPassword]",
                            "table": "[parameters('azureSQL').tableName]"
                          }
                        },
                        "serialization": null,
                        "diagnostics": null
                      }
                    }
                  ]
            },
            "resources": [
                {         
                "name": "Microsoft.Insights/service",
                "type": "providers/diagnosticSettings",
                "apiVersion": "2015-07-01",
                "dependsOn": [
                    "[concat('Microsoft.Devices/IotHubs', 'IoTHubIn')]",
                    "[concat('Microsoft.Sql/Server/Database/', 'DataBase')]",
                  "[concat('Microsoft.StreamAnalytics/StreamingJobs/', parameters('streamAnalyticsSettings').streamAnalyticsJobName)]"
                ],
                "properties": {
                    "workspaceId": "[resourceId('Microsoft.OperationalInsights/workspaces/', parameters('omsSettings').omsWorkspaceName)]",
                    "logs": [
                        {
                          "category": "Authoring",
                          "enabled": true,
                          "retentionPolicy": {
                            "days": 0,
                            "enabled": false
                          }
                        }
                    ],
                      "metrics": [
                        {
                          "timeGrain": "PT1M",
                          "enabled": true,
                            "retentionPolicy": {
                                   "enabled": false,
                                   "days": 0
                            }
                        }
                    ]
          
                }
            }
            ]
            
        }
    ]
}