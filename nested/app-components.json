{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "apiVersions": {
            "type": "object"
        },
        "mlSettings":{
            "type": "object"
        }
    },
    "variables": {},
    "resources": [
        {
            "apiVersion":"[parameters('apiVersions').workspaceApiVersion]",
            "name": "[parameters('mlSettings').workspaceName]",
            "location": "[parameters('mlSettings').location]",
            "type": "Microsoft.MachineLearning/workspaces",
            "properties": {
                "userStorageAccountId": "[resourceId('Microsoft.Storage/storageAccounts',toLower(parameters('mlSettings').mlStorageName))]"
            },
            "dependsOn": [
                "[toLower(parameters('mlSettings').mlStorageName)]"
            ]
        },
        {
            "apiVersion": "[parameters('apiVersions').storageApiVersion1]",
            "name": "[toLower(parameters('mlSettings').mlStorageName)]",
            "location": "[parameters('mlSettings').location]",
            "type": "Microsoft.Storage/storageAccounts",
            "sku": {
                "name": "Standard_LRS"
            },
            "kind": "Storage"
        },
        {
            "apiVersion": "[parameters('apiVersions').planApiVersion]",
            "name": "[concat(parameters('mlSettings').workspaceName,'Plan')]",
            "type": "Microsoft.MachineLearning/commitmentPlans",
            "location": "[parameters('mlSettings').location]",
            "sku": {
                "name": "[parameters('mlSettings').mlSkuName]",
                "tier": "Standard",
                "capacity": "1"
            },
            "properties": {}
        }
      
       ],
    "outputs": {}
}