{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "apiVersions": {
            "type": "object"
        },
        "webSiteSettings": {
            "type": "object"
        }
    },
    "variables": {},
    "resources": [
        {
            "apiVersion": "[parameters('apiVersions').webApiVersion]",
            "name": "[parameters('webSiteSettings').hostingPlanName]",
            "type": "Microsoft.Web/serverfarms",
            "location": "[parameters('webSiteSettings').location]",
            "dependsOn": [],
            "sku": {
                "name": "[parameters('webSiteSettings').skuName]",
                "capacity": "[parameters('webSiteSettings').skuCapacity]"
            },
            "properties": {
                "name": "[parameters('webSiteSettings').hostingPlanName]"
            }
        },
        {
            "apiVersion": "[parameters('apiVersions').webApiVersion]",
            "name": "[parameters('webSiteSettings').webSiteName1]",
            "type": "Microsoft.Web/sites",
            "location": "[parameters('webSiteSettings').location]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/serverfarms', parameters('webSiteSettings').hostingPlanName)]"
            ],
            "properties": {
                "serverFarmId": "[parameters('webSiteSettings').hostingPlanName]",
                "siteConfig": {
                    "connectionStrings": [
                        {
                            "name": "DBConnect",
                            "connectionString": "[parameters('webSiteSettings').assetDetailsConnectionString]"
                        }
                    ]
                }
            },
            "resources": [
                {
                    "apiVersion": "[parameters('apiVersions').webApiVersion]",
                    "name": "web",
                    "type": "sourcecontrols",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/Sites', parameters('webSiteSettings').webSiteName1)]"
                    ],
                    "properties": {
                        "RepoUrl": "[parameters('webSiteSettings').repoURL]",
                        "branch": "[parameters('webSiteSettings').branch]",
                        "IsManualIntegration": true
                    }
                }
            ]
        }
    ],
    "outputs": {}
}